pipeline {
    agent any
    tools {nodejs "node"}
    environment {
        CI = 'true'
        API_DIR = './api-tool-httpbin-v2/'
        DEV_ENV = 'local'
        TEST_SCRIPT_FILE = 'httpbin.postman_collection.json'        
    }
    stages {
               stage('Deploy to local') {
            environment{
                RETRY = '80'
            }
            steps {
                echo 'Register to $DEV_ENV'
                sh './config.sh'
                echo 'Logging into $DEV_ENV'
                withCredentials([usernamePassword(credentialsId: 'apim_dev', usernameVariable: 'DEV_USERNAME', passwordVariable: 'DEV_PASSWORD')]) {
                    sh 'apictl login $DEV_ENV -u $DEV_USERNAME -p $DEV_PASSWORD -k'                        
                }
                echo 'Import to $DEV_ENV'

                sh 'apictl import-api -f $API_DIR -e $DEV_ENV -k --preserve-provider --update --verbose'
               
            }
        }

        stage('Deploy to $DEV_ENV') {
            steps {
                echo 'Running tests in $DEV_ENV'
                sh 'apictl change-status api -a Publish -n api-tool-httpbin -v v2 -e $DEV_ENV -k' 
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running tests in $DEV_ENV'
                sh 'newman run $TEST_SCRIPT_FILE --insecure' 
            }
        }
    }
    post {
        cleanup {
            deleteDir()
            dir("${workspace}@tmp") {
                deleteDir()
            }
            dir("${workspace}@script") {
                deleteDir()
            }
        }
    }
}
