pipeline {
    agent any
    tools {nodejs "node"}
    environment {
        CI = 'true'
        API_DIR = './api-tool-httpbin-v2/'
        DEV_ENV = 'local'
        TEST_SCRIPT_FILE = 'sample.httpbin.dev.postman_collection.json'        
    }
    stages {
               stage('Deploy to local') {
            environment{
                RETRY = '80'
            }
            steps {
                echo 'Logging into $DEV_ENV'
               
                sh 'apictl login $DEV_ENV -u admin -p admin -k'                        
                
                echo 'Deploying to $DEV_ENV'
                sh 'apictl import-api -f $API_DIR -e $DEV_ENV -k --preserve-provider --update --verbose'
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running tests in $DEV_ENV'
                sh 'newman run $API_DIR/$TEST_SCRIPT_FILE --insecure' 
            }
        }
    }
    post {
        cleanup {
            deleteDir()
            dir("${workspace}@tmp") {
                deleteDir()
            }
            dir("${workspace}@script") {
                deleteDir()
            }
        }
    }
}
